<?xml version="1.0" encoding="UTF-8"?>
<!--
  Maven Settings Template for Coherity Shared POM
  
  This file should be placed at ~/.m2/settings.xml (or use -s flag)
  
  For CI/CD: Use environment variables or GitHub secrets
  For Local Development: Replace placeholders with actual credentials
-->
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
          https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <servers>
    <!-- Coherity GitHub Packages Authentication -->
    <server>
      <id>coherity-releases</id>
      <username>${MAVEN_USERNAME}</username>
      <password>${MAVEN_PASSWORD}</password>
    </server>
    
    <!-- Coherity Snapshots (same as releases for GitHub Packages) -->
    <server>
      <id>coherity-snapshots</id>
      <username>${MAVEN_USERNAME}</username>
      <password>${MAVEN_PASSWORD}</password>
    </server>
  </servers>

  <profiles>
    <!-- Profile for connecting to Coherity repositories -->
    <profile>
      <id>coherity-repos</id>
      <repositories>
        <!-- Maven Central (explicit) -->
        <repository>
          <id>central</id>
          <name>Maven Central Repository</name>
          <url>https://repo1.maven.org/maven2</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        
        <!-- Coherity Repositories (GitHub Packages) -->
        <repository>
          <id>coherity-releases</id>
          <name>Coherity Releases</name>
          <url>https://maven.pkg.github.com/coherityio/coherity-shared-pom-java</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        
        <!-- Coherity Snapshots (same URL as releases for GitHub Packages) -->
        <repository>
          <id>coherity-snapshots</id>
          <name>Coherity Snapshots</name>
          <url>https://maven.pkg.github.com/coherityio/coherity-shared-pom-java</url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
      </repositories>
      
      <pluginRepositories>
        <!-- Maven Central for plugins (explicit) -->
        <pluginRepository>
          <id>central</id>
          <name>Maven Central Repository</name>
          <url>https://repo1.maven.org/maven2</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        
        <!-- Coherity Plugin Repository (GitHub Packages) -->
        <pluginRepository>
          <id>coherity-releases</id>
          <name>Coherity Plugin Releases</name>
          <!-- url>https://maven.pkg.github.com/coherityio/maven-repository</url -->
          <url>https://maven.pkg.github.com/coherityio/coherity-shared-pom-java</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        
        <!-- Coherity Plugin Snapshots (same URL as releases for GitHub Packages) -->
        <pluginRepository>
          <id>coherity-snapshots</id>
          <name>Coherity Plugin Snapshots</name>
          <!-- url>https://maven.pkg.github.com/coherityio/maven-repository</url -->
          <url>https://maven.pkg.github.com/coherityio/coherity-shared-pom-java</url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>coherity-repos</activeProfile>
  </activeProfiles>

</settings>
